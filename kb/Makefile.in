TOPSRCDIR = @top_srcdir@
CC = @CC@
CXX = @CXX@
LEX = @LEX@
YACC = @YACC@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
TARGETS = libkb.a
INCLUDES = symtab.h kb.h

all : public

public : $(TARGETS)
	@mkdir -p $(TOPSRCDIR)/include
	@mkdir -p $(TOPSRCDIR)/lib
	@for i in $(INCLUDES); do              \
	ln -sf ../kb/$$i $(TOPSRCDIR)/include; \
	done
	@for i in $(TARGETS); do           \
	ln -sf ../kb/$$i $(TOPSRCDIR)/lib; \
	done

libkb.a : symtab.o kb.o
	$(AR) -rcs $(@) symtab.o kb.o

symtab.o : symtab.h symtab.cpp
	$(CXX) $(CXXFLAGS) -o $(@) -c symtab.cpp

kb.o : kb.h kb.cpp symtab.o
	$(CXX) $(CXXFLAGS) -o $(@) -c kb.cpp

clean :
	$(RM) *.o

distclean : clean
	$(RM) $(TARGETS) Makefile
	@for i in $(INCLUDES); do       \
	$(RM) $(TOPSRCDIR)/include/$$i; \
	done
	@for i in $(TARGETS); do    \
	$(RM) $(TOPSRCDIR)/lib/$$i; \
	done
