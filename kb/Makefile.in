TOPSRCDIR = @top_srcdir@
CC = @CC@
CXX = @CXX@
LEX = @LEX@
YACC = @YACC@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
TARGETS = libkb.a
INCLUDES = identifier.h symtab.h atom.h

all : public

public : $(TARGETS)
	@mkdir -p $(TOPSRCDIR)/include
	@mkdir -p $(TOPSRCDIR)/lib
	@for i in $(INCLUDES); do              \
	ln -sf ../kb/$$i $(TOPSRCDIR)/include; \
	done
	@for i in $(TARGETS); do           \
	ln -sf ../kb/$$i $(TOPSRCDIR)/lib; \
	done

libkb.a : identifier.o symtab.o atom.o
	$(AR) -rcs $(@) identifier.o symtab.o atom.o

identifier.o : identifier.h identifier.cpp
	$(CXX) $(CXXFLAGS) -o $(@) -c identifier.cpp

symtab.o : symtab.h symtab.cpp identifier.o
	$(CXX) $(CXXFLAGS) -o $(@) -c symtab.cpp

atom.o : atom.h atom.cpp identifier.o
	$(CXX) $(CXXFLAGS) -o $(@) -c atom.cpp

clean :
	$(RM) *.o

distclean : clean
	$(RM) $(TARGETS) Makefile
	@for i in $(INCLUDES); do       \
	$(RM) $(TOPSRCDIR)/include/$$i; \
	done
	@for i in $(TARGETS); do    \
	$(RM) $(TOPSRCDIR)/lib/$$i; \
	done
