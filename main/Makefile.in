TOPSRCDIR = @top_srcdir@
CC = @CC@
LEX = @LEX@
YACC = @YACC@
DEBUG = @enable_debug@
CFLAGS = -ansi -Wall -Wstrict-prototypes -I$(TOPSRCDIR)/include -L$(TOPSRCDIR)/lib
LDFLAGS = -L$(TOPSRCDIR)/lib
TARGETS = vlad

ifeq "$(DEBUG)" "yes"
CFLAGS += -g -DDEBUG
else
CFLAGS += -O2
endif

all : $(TARGETS)

vlad : vlad.o $(TOPSRCDIR)/lib/*
	$(CC) $(LDFLAGS) -o $(@) vlad.o -lparser -lfl
	@for i in $(TARGETS); do      \
	ln -sf main/$$i $(TOPSRCDIR); \
	done
ifeq "$(DEBUG)" "yes"
	strip $(@)
endif

vlad.o : vlad.c
	$(CC) $(CFLAGS) -o $(@) -c vlad.c

clean :
	$(RM) *.o

distclean : clean
	$(RM) $(TARGETS) Makefile
	@for i in $(TARGETS); do \
	$(RM) $(TOPSRCDIR)/$$i;  \
	done
