TOPSRCDIR = @top_srcdir@
DISTDIR = @DISTDIR@
CC = @CC@
CXX = @CXX@
LEX = @LEX@
YACC = @YACC@
LEXLIB = @LEXLIB@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
LDFLAGS = @LDFLAGS@
DEBUG = @DEBUG@
SMODELS = @SMODELS@
STRIP = @STRIP@
TARGETS = vlad
OBJECTS = vlad.o

ifdef SMODELS
SMLIB = -lsmodels
endif

all : $(TARGETS)
	@mkdir -p $(DISTDIR)/bin
	@for i in $(TARGETS); do \
	ln -sf ../../main/$$i $(DISTDIR)/bin; \
	done

vlad : $(OBJECTS) $(DISTDIR)/lib/vlad/*
	$(CXX) $(LDFLAGS) -o $(@) vlad.o $(SMLIB) -lparser -lkb -lcommon $(LEXLIB)
ifndef DEBUG
  ifdef STRIP
	strip $(@)
  endif
endif

vlad.o : vlad.cpp
	$(CXX) $(CXXFLAGS) -o $(@) -c vlad.cpp

clean :
	$(RM) $(OBJECTS)

distclean : clean
	$(RM) $(TARGETS) Makefile
	@for i in $(TARGETS); do \
	$(RM) $(DISTDIR)/bin/$$i; \
	done
