TOPSRCDIR = @top_srcdir@
DISTDIR = @DISTDIR@
BINDIR = @BINDIR@
INCLUDEDIR = @INCLUDEDIR@
LIBDIR = @LIBDIR@
CC = @CC@
CXX = @CXX@
LEX = @LEX@
YACC = @YACC@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
TARGETS = libcommon.a
INCLUDES = vlad.h list.h stringlist.h numberlist.h

all : copy-includes copy-targets

copy-includes : $(INCLUDES)
	@mkdir -p $(INCLUDEDIR)
	@for i in $(INCLUDES); do \
	ln -sf ../../../common/$$i $(INCLUDEDIR); \
	done

copy-targets : $(TARGETS)
	@mkdir -p $(LIBDIR)
	@for i in $(TARGETS); do \
	ln -sf ../../../common/$$i $(LIBDIR); \
	done

libcommon.a : list.o stringlist.o numberlist.o
	$(AR) -rcs $(@) list.o stringlist.o numberlist.o

list.o : list.h list.cpp
	$(CXX) $(CXXFLAGS) -o $(@) -c list.cpp

stringlist.o : stringlist.h stringlist.cpp list.o
	$(CXX) $(CXXFLAGS) -o $(@) -c stringlist.cpp

numberlist.o : numberlist.h numberlist.cpp list.o
	$(CXX) $(CXXFLAGS) -o $(@) -c numberlist.cpp

clean :
	$(RM) *.o

distclean : clean
	$(RM) $(TARGETS) Makefile
	@for i in $(INCLUDES); do \
	$(RM) $(INCLUDEDIR)/$$i; \
	done
	@for i in $(TARGETS); do \
	$(RM) $(LIBDIR)/$$i; \
	done
